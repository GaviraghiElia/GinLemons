<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_liste"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ListeFragment">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs_liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:tabIndicatorColor="@color/purple_personal_light">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_liste_mieListe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mieListe" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_liste_completati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completati" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager2_liste"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabs_liste" />
</RelativeLayout>
