<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardMaxElevation="4dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:background="@drawable/text_button_ripple_background"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/row_discover_ricette">

            <ImageView
                android:id="@+id/iconaRicetta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cocktail_bottom_navbar"
                android:layout_centerInParent="true"
                android:padding="10dp" />

        </RelativeLayout>

        <TextView
            android:transitionName="transition_info"
            android:id="@+id/nomeRicetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/ricette"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp" />

        <TextView
            android:transitionName="transition_info"
            android:id="@+id/costoRicetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="270dp"
            android:text="â‚¬"
            android:textColor="@color/black" />

        <TextView
            android:transitionName="transition_info"
            android:id="@+id/alcoolRicetta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/costoRicetta"
            android:layout_marginTop="5dp"
            android:layout_marginStart="270dp"
            android:text="15%"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>