<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RicetteInfoActivity">

  <Toolbar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/activity_info_toolbar"
      android:background="?attr/colorPrimary"
      android:minHeight="?attr/actionBarSize"
      android:theme="@style/Toolbar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:title="La mia toolbar"
      app:titleTextColor="@color/white"/>


  <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
      android:id="@+id/add_to_list_extended_floating_action_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="230dp"
      android:layout_marginTop="600dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="20dp"
      android:backgroundTint="@color/purple_personal_light"
      android:text="@string/add_to_list"
      android:textColor="@color/white"
      app:icon="@drawable/ic_baseline_add_24"
      app:iconTint="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/activity_info_toolbar" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginTop="?attr/actionBarSize"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/activity_info_toolbar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/imageView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/cocktail_bottom_navbar" />

      <RelativeLayout
          android:id="@+id/titoloInfo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:padding="20dp"
          app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/nomeRicettaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="70dp"
            android:gravity="center"
            android:text="@string/ricette"
            android:textColor="@color/black"
            android:textSize="40sp" />
      </RelativeLayout>


      <RelativeLayout
          android:id="@+id/descrizioneInfo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:padding="20dp"
          android:background="@drawable/description_fast_info_ricette"
          android:layout_marginEnd="20dp"
          android:layout_marginStart="20dp"
          android:elevation="4dp"
          app:layout_constraintTop_toBottomOf="@+id/titoloInfo">

        <TextView
            android:id="@+id/costoRicettaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:text="â‚¬"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/alcoolRicettaInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="20dp"
            android:text="15%"
            android:textColor="@color/black"
            android:textSize="30sp" />
      </RelativeLayout>

      <TextView
          android:id="@+id/descrizioneRicettaInfo"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="30dp"
          android:paddingStart="10dp"
          android:paddingEnd="10dp"
          android:paddingBottom="75dp"
          android:text="Ciao Ciao"
          app:layout_constraintTop_toBottomOf="@+id/descrizioneInfo" />
    </LinearLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>